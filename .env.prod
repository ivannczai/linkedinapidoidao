# Variáveis de Ambiente de Produção

# Configurações Gerais
SERVER_NAME=your-domain.com
ACME_EMAIL=your-email@example.com
ENABLE_SSL=true

# Server
NODE_ENV=production
PORT=3001
JWT_SECRET=your_strong_production_jwt_secret_here

# Banco de Dados PostgreSQL
DB_USER=admin
DB_HOST=postgres # Importante: usar o nome do serviço do docker-compose
DB_DATABASE=linkedin_manager
DB_PASSWORD=your_strong_production_db_password_here
DB_PORT=5432

# Credenciais da Aplicação do LinkedIn para OAuth 2.0
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://your-domain.com/api/auth/linkedin/callback

# Chave da API do Google Gemini
GEMINI_API_KEY=your_production_gemini_api_key
